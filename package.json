{
    "name": "sqlops-spexecutesql-to-sql",
    "displayName": "sqlops-spexecutesql-to-sql",
    "description": "sp_executesql to sql",
    "version": "1.0.4",
    "publisher": "pejmannikram",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/PejmanNik/sqlops-spexecutesql-to-sql"
    },
    "engines": {
        "vscode": "^1.29.0",
        "sqlops": "*"
    },
    "keywords": [
        "spexecutesql",
        "sp-executesql",
        "convert"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.convert"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.convert",
                "title": "Convert",
                "category": "sp_executesql to sql"
            }
        ],
        "configuration": [
            {
                "title": "SpExecuteSql To Sql",
                "properties": {
                    "spexecutesql.surroundFloatWithSingleQuotes": {
                        "type": "boolean",
                        "defaultValue": false,
                        "markdownDescription": "Surrounds `FLOAT` value with single quotes `'`"
                    },
                    "spexecutesql.replaceVariablesInQuery": {
                        "type": "boolean",
                        "defaultValue": false,
                        "markdownDescription": "Replaces the variables in the query with their value"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install && node ./node_modules/sqlops/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.1.2",
        "sqlops": "github:anthonydresser/sqlops-extension-sqlops",
        "tslint": "^5.20.1",
        "typescript": "^3.7.4",
        "vscode": "^1.1.36"
    }
}
